<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingScreen"
    android:orientation="vertical"
    android:accessibilityPaneTitle="More">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/backfromsetting"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:background="@drawable/baseline_arrow_back_ios_24"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:text="SETTINGS"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gotogeleral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_element_box"
                android:text="General"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_margin="10dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gotoaccessibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_element_box"
                android:text="accessibility"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_margin="10dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gotovesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_element_box"
                android:text="vesion"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_margin="10dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gotofeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_element_box"
                android:text="send feedback"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_margin="10dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gotoabout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_element_box"
                android:text="about app"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_margin="10dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gotorate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_element_box"
                android:text="rate app in the google play store"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_margin="10dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gotoprivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_element_box"
                android:text="privacy policy"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_margin="10dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gototerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_element_box"
                android:text="terms and services"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_margin="10dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gotocommunity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_element_box"
                android:text="community standareds"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_margin="10dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>